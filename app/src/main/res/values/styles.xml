<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <!--used for no preview image in homepage recyclerview -->
    <style name="NoPreviewTile" parent="AppTheme">
        <item name="android:textSize">@dimen/movie_poster_no_preview_text</item>
        <item name="android:textColor">@color/no_preview_text</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <!--activity_movie_detail line separator -->
    <style name="LineSeparator" parent="AppTheme">
        <item name="android:background">@color/line_separator</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- activity_movie_detail  fonts-->


    <style name="DetailTitleDescription" parent="AppTheme">
        <item name="android:fontFamily">roboto thin</item>
        <item name="android:textSize">@dimen/detail_content_description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/detail_description_text</item>
    </style>

    <style name="DetailContentText" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/detail_content_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="YellowRatingBarSmall" parent="AppTheme">
        <item name="colorControlNormal">@color/rating_bar_unselected</item>
        <item name="colorControlActivated">@color/rating_bar_selected</item>

    </style>

    <!-- VideosActivity fonts -->
    <style name="VideoTrailerTitle" parent="AppTheme">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="VideoTrailerSubtitle" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EmptyViewRecyclerView" parent="AppTheme">
        <item name ="android:textSize">@dimen/empty_view_message_text_size</item>
        <item name="android:paddingTop">@dimen/empty_view_padding_top</item>
        <item name="android:paddingLeft">@dimen/empty_view_padding_side</item>
        <item name="android:paddingRight">@dimen/empty_view_padding_side</item>

        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_app_title_home</item>
    </style>




</resources>
